{
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
      "baseUrl": "./",
      "module": "ESNext",
      "target": "ESNext",
      "rootDir": "./",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
  }
}
